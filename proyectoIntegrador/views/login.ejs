<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>

    <% if (locals.user != undefined) { %>
     
        <%- include('./partials/headerLog') %>

        <% } else { %>
         
            <%- include('./partials/header') %>
            
    <% } %>

    <main>
        <section class="center main-content">
        <h1>Login</h1>
        
        <form action="/" method="post">

            <div>
                <label for="usuarioEmail">Usuario o Email:</label>
                <input type="text" id="usuarioEmail" name="usuarioEmail" required>
            </div>

            <div>
                <label for="contrasena">Contraseña:</label>
            <input type="password" name="contrasena" id="contrasena" required>

            </div>
            
            <div>
                <label for="remenberme" style="color:white">Recuerdame</label>
                <input type="checkbox" name="remenberme" id="remenberme">
            </div>

            <input type="submit" value="Iniciar Sesión">
        </form>

        </section>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>
<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>

    <% if (locals.user != undefined) { %>
     
        <%- include('./partials/headerLog') %>

        <% } else { %>
         
            <%- include('./partials/header') %>
            
    <% } %>

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= listaPosteo[i].postToUser.fotoPerfil %>" alt="">
                <div class="info-usuario">
                    <p><%= listaPosteo[i].postToUser.email %></p> 
                    <a class="follow" href="/profile/edit"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li><%= listaPosteo[i].idPosteos.length %></li>
                        <li>200 seguidores</li>
                        <li>300 seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <article class="post">
                    <% for( let i = 0; i < listaPosteo.length; i++ ) { %>
                    
                    
                    <a href="/posteos/postDetail/<%= listaPosteo[i].postToUser.email %>">
                        <img src="<%= listaPosteo[i].url %>" alt="">
                    </a>
                    <% } %>
                </article>
                
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %>
    
</body>

</html>